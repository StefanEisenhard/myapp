<%= form_for(@micropost, html: { multipart: true }) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.text_area :content, placeholder: "Create new post..." %>
	</div>

	<%= f.submit "Post", class: "btn btn-primary" %>
	<span class="picture">
		<%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png,video/mp4,video/avi,video/flv' %>
	</span>
<% end %>

<script type="text/javascript">
	$('#micropost_picture').bind('change', function() {
	size_in_megabytes = this.files[0].size/1024/1024;
	if (size_in_megabytes > 50) {
		alert('Maximum file size is 50MB. Please choose a smaller file.');
	}
	});
</script>