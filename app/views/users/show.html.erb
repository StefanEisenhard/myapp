<% provide(:title, @user.name) %>

<div class="row">

	<aside class="col-md-4">
	
	<section class="user_info">
		<h1>
			<% if @user.picture? %>
				<%= image_tag(@user.picture, width: '50') %>
			<% else %>
				<%= image_tag("DefaultProfileIcon.png", width: '50', alt: "Profile Picture") %>
			<% end %>
			<br>
			<%= @user.name %>
		</h1>
	</section>
	
	<section class="stats">
		<%= render 'shared/stats' %>
	</section>
	
	</aside>

	<div class="col-md-8">
		<%= render 'follow_form' if logged_in? %>
		<% if @user.microposts.any? %>
			<h3>Posts (<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>
	
</div>